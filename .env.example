# 应用配置
APP_NAME=react-scenario-lab
NODE_ENV=production

# 端口配置
HOST_PORT=8000          # 宿主机端口
CONTAINER_PORT=3000     # 容器内部端口

# 网络配置
HOSTNAME=0.0.0.0

# Next.js 配置
NEXT_TELEMETRY_DISABLED=1

# 应用URL配置（生产环境必须设置）
# NEXT_PUBLIC_APP_URL 是主要配置，用于二维码生成和客户端访问
NEXT_PUBLIC_APP_URL=http://localhost:3002

# 备用域名配置（可选，如果 NEXT_PUBLIC_APP_URL 未设置时会使用）
# NEXT_DOMAIN_NAME=https://your-domain.com

# 二维码签名密钥（生产环境必须设置，且保持机密）
QR_CODE_SECRET=dev-secret-key-for-testing

# 健康检查配置
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=20s

# 数据库配置（如果需要）
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=react_scenario_lab
# DB_USER=username
# DB_PASSWORD=password

# Redis配置（如果需要）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# AI 图片生成 API 配置
# OpenAI DALL-E 配置
# NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here
# NEXT_PUBLIC_OPENAI_BASE_URL=https://api.openai.com/v1

# Stability AI 配置
# NEXT_PUBLIC_STABILITY_API_KEY=your_stability_api_key_here
# NEXT_PUBLIC_STABILITY_BASE_URL=https://api.stability.ai/v1

# Midjourney 配置（通过代理服务）
# NEXT_PUBLIC_MIDJOURNEY_API_KEY=your_midjourney_api_key_here
# NEXT_PUBLIC_MIDJOURNEY_BASE_URL=http://localhost:3001

# SiliconFlow 配置（Kwai Kolors）
# NEXT_PUBLIC_SILICONFLOW_API_KEY=your_siliconflow_api_key_here
# NEXT_PUBLIC_SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1

# 第三方服务配置（如果需要）
# API_KEY=your_api_key_here
# SECRET_KEY=your_secret_key_here

# 日志配置
LOG_LEVEL=info

# 文件上传配置
UPLOAD_BASE_DIR=/app/uploads
TEMP_BASE_DIR=/app/temp
