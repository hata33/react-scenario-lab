# 应用配置
APP_NAME=react-scenario-lab
NODE_ENV=production

# 端口配置
HOST_PORT=8000          # 宿主机端口
CONTAINER_PORT=3000     # 容器内部端口

# 网络配置
HOSTNAME=0.0.0.0

# Next.js 配置
NEXT_TELEMETRY_DISABLED=1

# 健康检查配置
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=20s

# 数据库配置（如果需要）
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=react_scenario_lab
# DB_USER=username
# DB_PASSWORD=password

# Redis配置（如果需要）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# 第三方服务配置（如果需要）
# API_KEY=your_api_key_here
# SECRET_KEY=your_secret_key_here

# 日志配置
LOG_LEVEL=info
